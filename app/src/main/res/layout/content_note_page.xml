<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.example.jesper.pageturner.MainActivity"
    android:background="@color/bgColor">




    <!-- Background colour menu-->
    <TableRow
        android:id="@+id/backgroundMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f5f2f9"
        android:layout_alignBottom="@+id/HeadlineSongTitle">
    </TableRow>

    <!--Song title-->
    <TextView
        android:id="@+id/HeadlineSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Til vor lille gerning ud"
        android:fontFamily="Roboto"
        android:textColor="@color/headlineColor"
        android:textSize="38dp"
        android:textStyle="normal"
        android:layout_marginLeft="90dp"
        android:paddingBottom="10dp" />

    <!--Artist name-->
    <TextView
        android:id="@+id/HeadlineArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" - Unknown"
        android:fontFamily="Roboto"
        android:textColor="@color/headlineColor"
        android:layout_toRightOf="@+id/HeadlineSongTitle"
        android:textSize="30dp"
        android:textStyle="italic"
        android:paddingBottom="10dp" />

    <!--back button-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noteImage"
        android:src="@drawable/backbutton"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="backChooseSong"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/backgroundMenu"
        android:layout_margin="20dp"
        android:background="@color/lightPurple"
        android:id="@+id/view" />

    <!--Drop down menu-->
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/HeadlineArtist"
        android:id="@+id/dropDownMenu"
        android:entries="@array/dropdownitems"
        android:layout_marginRight="50dp"></Spinner>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.example.jesper.pageturner.MainActivity"
    android:background="@color/headlineColor">




    <!-- Background colour menu-->
    <TableRow
        android:id="@+id/backgroundMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/lightPurple"
        android:layout_alignBottom="@+id/Headline">
    </TableRow>

    <!--Headline-->
    <TextView
        android:id="@+id/Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:fontFamily="Roboto"
        android:textColor="@color/headlineColor"
        android:textSize="38dp"
        android:textStyle="normal"

        android:layout_marginLeft="90dp"
        android:paddingBottom="10dp" />

<Spinner
    android:id="@+id/dropDownNotes"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:entries="@array/NoteMenuOptions"
    android:prompt="@string/option_select"
    android:layout_marginTop="30dp">
</Spinner>

    <!--Content Background-->
    <RelativeLayout
        android:id="@+id/contentNotePage1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/backgroundMenu"
        android:layout_margin="20dp"
        android:background="@color/lightPurple">
    </RelativeLayout>

</RelativeLayout>
